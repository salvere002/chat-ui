{
  "name": "chat-ui",
  "version": "1.0.0",
  "description": "A modern chat UI component library with React, TypeScript, and Zustand state management",
  "main": "./dist-lib/chat-ui.cjs.js",
  "module": "./dist-lib/chat-ui.es.js",
  "types": "./dist-lib/src/lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist-lib/chat-ui.es.js",
      "require": "./dist-lib/chat-ui.cjs.js",
      "types": "./dist-lib/src/lib/index.d.ts"
    },
    "./style.css": "./dist-lib/style.css"
  },
  "files": [
    "dist-lib",
    "README.md",
    "COMPONENT_USAGE.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:lib": "vite build --config vite.config.lib.ts && tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "demo": "npm run build:lib && npm --prefix examples/demo install && npm --prefix examples/demo run dev",
    "demo:build": "npm run build:lib && npm --prefix examples/demo install && npm --prefix examples/demo run build",
    "demo:preview": "npm --prefix examples/demo run preview",
    "typecheck": "tsc -p tsconfig.check.json",
    "backend:win": "cd backend && .\\venv\\Scripts\\activate && python app.py",
    "backend:unix": "cd backend && source venv/bin/activate && python app.py",
    "backend": "node -e \"process.platform === 'win32' ? require('child_process').execSync('npm run backend:win', {stdio: 'inherit'}) : require('child_process').execSync('npm run backend:unix', {stdio: 'inherit'})\"",
    "start:backend": "npm run backend",
    "start:frontend": "npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/axios": "^0.14.4",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^22.14.1",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "dayjs": "^1.11.18",
    "eventsource-parser": "^3.0.6",
    "katex": "^0.16.22",
    "lodash.throttle": "^4.1.1",
    "mime": "^4.0.7",
    "pretty-bytes": "^7.0.1",
    "qs": "^6.14.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-textarea-autosize": "^8.5.9",
    "recharts": "^3.1.2",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^3.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sonner": "^2.0.7",
    "zustand": "^5.0.3"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
