{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist-lib"
      // It's often good to specify a declarationDir as well,
      // to keep .d.ts files separate from JS files if they were also emitted.
      // "declarationDir": "dist/types" 
    },
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ]
  }
